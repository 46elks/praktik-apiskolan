doctype html
html(lang="sv")

    head

        include includes/head.pug

        title APIskolan - Ditt första API request!

    body

        #contentWrapper

            //- HEADER
            include includes/header.pug

            #mainContentDiv

                .row

                    .col

                    h1 Ditt första API request!

                    //- CODE EDITOR
                    .editor
                        .editor-wrapper 
                            .editor-body 
                                #editorCode.editor-code
                                
                            .editor-footer

                                .editor-footer-left
                                    i.fas.fa-play.fa-lg.editor-button.editor-run
                                    i.fas.fa-redo-alt.fa-lg.editor-button.editor-reset

                                .editor-footer-right
                                    .editor-console
                                        ul.editor-console-logs


                .text-center.mt-5

                    a(href="content.html") Föregående sida - "Vad är egentligen ett API?"

            //- FOOTER
            include includes/footer.pug


        //- SCRIPTS
        include includes/scripts.pug
        script(src="js/editor.js")
        script(src="js/editor-console.js")

